<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/user_displayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_displayname" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/change_displayname_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:text="@string/change_displayname_button"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_email" />

    <TextView
        android:id="@+id/user_debt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_debt" />

    <TextView
        android:id="@+id/user_bikerental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_bikerental" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/stop_renting_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:text="@string/stop_renting_button"
        app:srcCompat="@drawable/ic_baseline_add_24" />

</LinearLayout>