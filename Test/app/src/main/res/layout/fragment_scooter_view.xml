<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        app:srcCompat="@drawable/scootermedia2"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/scootertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scooterid" />

    <TextView
        android:id="@+id/scootermodel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scootermodel" />

    <TextView
        android:id="@+id/scooterlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scooterlocation" />

    <TextView
        android:id="@+id/scootertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scootertime" />

    <TextView
        android:id="@+id/scooterbatterylevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scooterbatterylevel" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/rent_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:text="@string/rent_button"
        app:srcCompat="@drawable/ic_baseline_add_24" />

</LinearLayout>