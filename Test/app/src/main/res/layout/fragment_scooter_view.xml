<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/scootertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scooterid" />

    <TextView
        android:id="@+id/scooterlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scooterlocation" />

    <TextView
        android:id="@+id/scootertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scootertime" />

    <TextView
        android:id="@+id/scooterbatterylevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scooterbatterylevel" />

</LinearLayout>